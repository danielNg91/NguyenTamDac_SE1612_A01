@model BusinessObjects.OrderDetail;
@{
    ViewData["Title"] = "Delete";
}

@if (TempData["Message"] != null)
{
    <h3 style="color:red">@TempData["Message"]</h3>
}

<h1>Delete</h1>
<hr />
<h3 class="text-warning">Are you sure to delete this?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.OrderId) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.OrderId) </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.FlowerBouquet.FlowerBouquetName) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.FlowerBouquet.FlowerBouquetName) </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.UnitPrice) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.UnitPrice) </dd>
    </dl>


    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Quantity) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Quantity) </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Discount) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Discount) </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.UnitPrice) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.UnitPrice) </dd>
    </dl>

    <form method="post" asp-action="DeleteOrderDetail"  asp-route-orderId="@Model.OrderId" asp-route-flowerId="@Model.FlowerBouquetId">
        <button class="btn btn-danger">Delete</button>
    </form>
</div>

<div>
    <a asp-action="Detail" asp-controller="Orders" asp-route-id="@Model.OrderId">Back To Order</a>
</div>
