@model BusinessObjects.Order;
@{
    ViewData["Title"] = "Delete";
}

@if (TempData["Message"] != null)
{
    <h3 style="color:red">@TempData["Message"]</h3>
}

<h1>Delete</h1>
<hr />
<h3 class="text-warning">Are you sure to delete this?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.OrderId) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.OrderId) </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.CustomerId) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.CustomerId) </dd>
    </dl>


    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.OrderDate) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.OrderDate) </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.ShippedDate) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.ShippedDate) </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Total) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Total) </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.OrderStatus) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.OrderStatus) </dd>
    </dl>

    <form method="post" asp-action="DeleteOrder" asp-route-id="@Model.OrderId">
        <button class="btn btn-danger">Delete</button>
    </form>
</div>

<div>
    <a asp-action="Index"> Back </a>
</div>
