@model BusinessObjects.Order;
@{
    ViewData["Title"] = "Details";
}

<h1>Order</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.OrderId) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.OrderId) </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.CustomerId) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.CustomerId) </dd>
    </dl>


    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.OrderDate) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.OrderDate) </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.ShippedDate) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.ShippedDate) </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Total) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Total) </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.OrderStatus) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.OrderStatus) </dd>
    </dl>
</div>


<h2>Order Details</h2>

<div>
    <a asp-action="Create" asp-route-orderId="@Model.OrderId" asp-controller="OrderDetails">Create New</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th> OrderId </th>
                <th> FlowerBouquetId </th>
                <th> UnitPrice </th>
                <th> Quantity </th>
                <th> Discount </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.OrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.FlowerBouquetId)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Discount)
                    </td>
                    <td>
                        <a asp-controller="OrderDetails"
                       asp-action="Update"
                       asp-route-orderId="@item.OrderId"
                       asp-route-flowerId="@item.FlowerBouquetId">Update</a>

                        <a asp-controller="OrderDetails"
                       asp-action="Delete"
                       asp-route-orderId="@item.OrderId"
                       asp-route-flowerId="@item.FlowerBouquetId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index"> Back </a>
</div>
