@model WebClient.Models.CreateFlowerBouquet

@{
    ViewData["Title"] = "Create Flower";
}

@if (TempData["Message"] != null)
{
    <h3 style="color:red">@TempData["Message"]</h3>
}

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div>
                <label asp-for="@Model.CategoryId" class="form-label"></label>
                <select asp-for="@Model.CategoryId" class="form-control" asp-items="ViewBag.Catgories"></select>
            </div>

            <div>
                <label asp-for="@Model.FlowerBouquetName" class="form-label"></label>
                <input asp-for="@Model.FlowerBouquetName" class="form-control" />
                <span asp-validation-for="@Model.FlowerBouquetName" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="@Model.Description" class="form-label"></label>
                <input asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="@Model.UnitPrice" class="form-label"></label>
                <input asp-for="@Model.UnitPrice" class="form-control" />
                <span asp-validation-for="@Model.UnitPrice" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="@Model.UnitsInStock" class="form-label"></label>
                <input asp-for="@Model.UnitsInStock" class="form-control" />
                <span asp-validation-for="@Model.UnitsInStock" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="@Model.FlowerBouquetStatus" class="form-label"></label>
                <input asp-for="@Model.FlowerBouquetStatus" class="form-control" />
                <span asp-validation-for="@Model.FlowerBouquetStatus" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="@Model.SupplierId" class="form-label"></label>
                <select asp-for="@Model.SupplierId" class="form-control" asp-items="ViewBag.Suppliers"></select>
            </div>

            <div class="mt-1">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back To List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }